# Pre-configured environment for a Stepper Motor Tank RC Car

# -- Core Settings --
MACHINE_ID="stepper-tank-001"
MACHINE_API_HOST="0.0.0.0"
MACHINE_API_PORT=8001
MACHINE_UDP_PORT=9999
COORDINATOR_URL="http://127.0.0.1:8000"

# -- Execution & Hardware Configuration --
# Set the execution mode to "real" to use actual hardware
EXECUTION_MODE="real"

# Set the motor type to "stepper"
MOTOR_TYPE="stepper"

# Set the arm type to "none" as this is a simple RC car
ARM_TYPE="none"

# -- Stepper Motor GPIO Pin Configuration --
# Replace with the actual GPIO pins connected to your STEP/DIR driver
LEFT_MOTOR_STEP_PIN=17
LEFT_MOTOR_DIR_PIN=18
RIGHT_MOTOR_STEP_PIN=27
RIGHT_MOTOR_DIR_PIN=22
